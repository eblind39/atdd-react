{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "sourceMap": true,
    "sourceRoot": ".",
    "baseUrl": "./",
    "paths": {
      "*": ["packages/*/src"]
    },
    "types": [
      "node",
      "jest",
      "lodash",
      "react",
      "enzyme",
      "react-dom",
      "react-redux",
      "react-router-dom",
      "react-test-renderer",
      "redux-mock-store",
      "redux-logger"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "../node_modules/cypress",
    "cypress/*/*.ts",
    "node_modules/jest-dom"
  ]
}
